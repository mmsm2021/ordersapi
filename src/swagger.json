{
    "openapi": "3.0.0",
    "info": {
        "title": "OrdersAPI",
        "version": "1.0.0"
    },
    "paths": {
        "/api/orders": {
            "get": {
                "summary": "Reads requested order from database",
                "description": "Returns a JSON representation of the requested order",
                "operationId": "App\\Actions\\Read::__invoke",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Order"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Creates new order from carried JSON",
                "description": "Order details are to be carried as JSON in requestbody , if/when validated this object is used for creation of new order",
                "operationId": "App\\Actions\\Create::__invoke",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "location": {
                                        "description": "Name of the location where the order was placed",
                                        "type": "string"
                                    },
                                    "locationId": {
                                        "description": "The identifying number of the location at which the order was placed",
                                        "type": "number"
                                    },
                                    "server": {
                                        "description": "The name of the Waiter/Waitress serving the order",
                                        "type": "string"
                                    },
                                    "customer": {
                                        "description": "The identifyer for the customer who placed the order",
                                        "type": "string"
                                    },
                                    "items": {
                                        "description": "Array holding the items purchased on the order",
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "nr": {
                                                    "description": "The item menu number",
                                                    "type": "number"
                                                },
                                                "name": {
                                                    "description": "Name of the item",
                                                    "type": "string"
                                                },
                                                "cost": {
                                                    "description": "Prize of the item",
                                                    "type": "number"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "discount": {
                                        "description": "The discount percentage applied on the order",
                                        "type": "string"
                                    },
                                    "total": {
                                        "description": "The total amount payed for the order",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Will reply with the orderId of the newly created order"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Order": {
                "description": "Order object",
                "properties": {
                    "orderId": {
                        "description": "Order ID",
                        "type": "string"
                    },
                    "location": {
                        "description": "Location Name",
                        "type": "string"
                    },
                    "locationId": {
                        "description": "Location ID",
                        "type": "integer"
                    },
                    "server": {
                        "description": "Name or ID of waitress or waiter",
                        "type": "string"
                    },
                    "customer": {
                        "description": "Name or ID of customer",
                        "type": "string"
                    },
                    "items": {
                        "description": "Array of items purchased",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrderItem"
                        }
                    },
                    "discount": {
                        "description": "Discount percenntage given on order",
                        "type": "string"
                    },
                    "total": {
                        "description": "Amount total payed for order",
                        "type": "string"
                    },
                    "orderDate": {
                        "description": "Date the order was placed",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "OrderItem": {
                "description": "Order item object",
                "properties": {
                    "itemUUID": {
                        "description": "Item unique ID on order",
                        "type": "string"
                    },
                    "nr": {
                        "description": "Order item number on menu",
                        "type": "integer"
                    },
                    "name": {
                        "description": "Order item name",
                        "type": "string"
                    },
                    "cost": {
                        "description": "Order item prize",
                        "type": "string"
                    },
                    "delivered": {
                        "description": "Order item delivery status",
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "400": {
                "description": "Bad Request"
            }
        }
    }
}